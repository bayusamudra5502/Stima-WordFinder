{
  "configurations": [
    {
      "name": "Debug Unit Test",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/test",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "buildtest",
      "cwd": "${fileDirname}",
      "linux": {
        "program": "${workspaceFolder}/bin/test"
      }
    }
  ]
}
